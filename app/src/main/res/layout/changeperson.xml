<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dip"
            android:paddingRight="30dip">

            <ImageView
                android:src="@drawable/head"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|center_horizontal"
                android:id="@+id/view"
                android:layout_alignBottom="@+id/certain"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="44dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的昵称"
                android:textSize="20sp"
                android:id="@+id/certain"
                android:paddingTop="10dip"
                android:paddingLeft="10dip"
                android:layout_marginTop="230dp" />

            <com.example.exerciese.DeletableEditText
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:id="@+id/Editname"
                android:hint="请输入昵称"
                android:singleLine="true"
                android:layout_below="@+id/certain"
                android:drawableRight="@drawable/cancle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/editbox_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的地址"
                android:textSize="20sp"
                android:id="@+id/address"
                android:layout_below="@+id/certain"
                android:layout_marginTop="50dip"
                android:paddingLeft="10dip"
                />

            <com.example.exerciese.DeletableEditText
                android:drawableRight="@drawable/cancle"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:id="@+id/Editpassword"
                android:hint="请输入地址"
                android:singleLine="true"
                android:layout_below="@+id/address"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/editbox_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的头像"
                android:textSize="20sp"
                android:id="@+id/textView"
                android:paddingTop="10dip"
                android:layout_above="@+id/view"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/register"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/certain" />

</RelativeLayout>